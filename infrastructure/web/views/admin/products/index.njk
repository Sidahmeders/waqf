{% extends '../../layouts/admin.njk' %}

{% block css %}

{% endblock %}

{% block content %}
  <h1 class="title is-3">كل الأوقاف</h1>

  {% set products = data.products %}

  {% if products.length %}
  <div class="table-container">
    <table class="table is-fullwidth">
      <thead>
      <th>الإسم</th>
      <th>النوع</th>
      <th>الرقم</th>
      <th>الوصف</th>
      <th>متاح</th>
      <th>مكسور</th>
      <th>أيام مجانية</th>
      <th>سعر اليوم</th>
      <th>الصورة</th>
      <th></th>
      <th></th>
      </thead>
      <tbody>
        {% for product in products %}
          <tr>
            <td>{{ product.name }}</td>
            <td>{{ product.type }}</td>
            <td>{{ product.serial }}</td>
            <td>{{ product.description }}</td>
            {% if product.isAvailable %}
              <td>نعم</td>
            {% else %}
              <td>لا</td>
            {% endif %}
            {% if product.isBroken %}
              <td>نعم</td>
            {% else %}
              <td>لا</td>
            {% endif %}
            <td>{{ product.freeDays }}</td>
            <td>{{ product.dayPrice }}</td>
            <td><a href="{{ product.imageUrl }}">رابط الصورة</a></td>
            <td><button class="button is-info is-light">تحديث</button></td>
            <td><button class="button is-danger is-light">حذف</button></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <nav class="pagination" role="navigation" aria-label="pagination">
    <a class="pagination-previous">الصفحة السابقة</a>
    <a class="pagination-next">الصفحة التالية</a>
    <ul class="pagination-list">
      <li>
        <a class="pagination-link" aria-label="Goto page 1">1</a>
      </li>
      <li>
        <span class="pagination-ellipsis">&hellip;</span>
      </li>
      <li>
        <a class="pagination-link" aria-label="Goto page 45">45</a>
      </li>
      <li>
        <a class="pagination-link is-current" aria-label="Page 46" aria-current="page">46</a>
      </li>
      <li>
        <a class="pagination-link" aria-label="Goto page 47">47</a>
      </li>
      <li>
        <span class="pagination-ellipsis">&hellip;</span>
      </li>
      <li>
        <a class="pagination-link" aria-label="Goto page 86">86</a>
      </li>
    </ul>
  </nav>
  {% else %}
    <section class="section">
      <figure class="image">
        <img src="/img/nothingFound.gif">
      </figure>
    </section>
  {% endif %}

{% endblock %}
