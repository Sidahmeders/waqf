{% extends '../layouts/admin.njk' %}

{% block css %}

{% endblock %}

{% block content %}

{% set stats = data.statisticsData %}
{% set users = stats.users %}
{% set products = stats.products %}
{% set orders = stats.orders %}

<div class="columns is-mobile">
  <div class="column" id="menu-content">

    <section class="section has-background-grey-lighter" id="association">
      <p class="title has-text-centered is-hidden-tablet">الجمعيات</p>
      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :عدد المسجلين
              <span class="icon">
                <ion-icon name="add-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ users.totalUsers }}</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section has-background-grey-lighter mt-3" id="needy">
      <p class="title has-text-centered is-hidden-tablet">المحتاجين</p>
      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :عدد الجمعيات المسجلة
              <span class="icon">
                <ion-icon name="add-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ users.registeredAssociations }}</p>
          </div>
        </div>
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :عدد المستفيدين
              <span class="icon">
                <ion-icon name="checkmark-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ users.totalBeneficiaries }}</p>
          </div>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :في الانتظار
              <span class="icon">
                <ion-icon name="radio-button-off-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ users.pendingUsers }}</p>
          </div>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :اتمام المهمة
              <span class="icon">
                <ion-icon name="checkbox-outline"></ion-icon>
              </span>
            </p>
            <progress class="progress is-medium" value="{{ users.missionProgress }}" max="100">
            </progress>
          </div>
        </div>
      </div>
    </section>

    <section class="section has-background-grey-lighter mt-3" id="machine">
      <p class="title has-text-centered is-hidden-tablet">الاجهزة</p>
      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :عدد الأجهزة الكلية
              <span class="icon">
                <ion-icon name="fitness-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ products.totalDevices }}</p>
          </div>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :عدد الأجهزة المتوفرة
              <span class="icon">
                <ion-icon name="bag-add-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ products.availableDevices }}</p>
          </div>
        </div>
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :عدد الأجهزة المستعارة
              <span class="icon">
                <ion-icon name="bag-remove-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ products.borrowedDevices }}</p>
          </div>
        </div>
      </div>

      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :الكمية
              <span class="icon">
                <ion-icon name="podium-outline"></ion-icon>
              </span>
            </p>
            {{products.availability}}
            <progress class="progress is-medium" value="{{ products.availability }}" max="100">
            </progress>
          </div>
        </div>
      </div>
    </section>

    <section class="section has-background-grey-lighter mt-3" id="order">
      <p class="title has-text-centered is-hidden-tablet">الطلبات</p>
      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :عدد الطلبات الكلية
              <span class="icon">
                <ion-icon name="receipt-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ orders.totalOrders }}</p>
          </div>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :عدد الطلبات الجديدة
              <span class="icon">
                <ion-icon name="add-circle-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ orders.totalNewOrders }}</p>
          </div>
        </div>
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              :عدد الطلبات الملبية
              <span class="icon">
                <ion-icon name="remove-circle-outline"></ion-icon>
              </span>
            </p>
            <p class="subtitle is-1 has-text-centered">{{ orders.fulfilledOrders }}</p>
          </div>
        </div>
      </div>

      <div class="columns">
        <div class="column">
          <div class="box">
            <p class="title is-6 has-text-centered">
              : التقدم في تليبة الطلبات
              <span class="icon">
                <ion-icon name="podium-outline"></ion-icon>
              </span>
            </p>
            <div class="buttons">
              <span class="tag is-primary is-light is-medium"> متوسط ​​الطلبات يومي : <span class="tag is-primary is-light is-medium"> {{ orders.averageOrders }} طلبات </span></span>
            </div>
            <progress class="progress is-medium" value="{{ orders.averageOrders }}" max="100">
            </progress>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
{% endblock %}